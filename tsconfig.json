{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2023"],
		// TODO: can't change these to Node16 until
		// https://github.com/kulshekhar/ts-jest/issues/4198 is resolved
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2022" // ref: https://github.com/tsconfig/bases/blob/main/bases/node20.json
	},
	"exclude": ["**/coverage/", "**/dist*/", "**/node_modules/", "**/scripts/", "**/*.d.ts"]
}
